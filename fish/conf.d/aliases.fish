status is-interactive; and begin
  # Abbreviations
  abbr --add -- gp 'git push'
  abbr --add -- gss 'git status -s'

  # Aliases
  alias eza 'eza --icons auto --git'
  alias la 'eza -a'
  alias less bat
  alias ll 'eza -l'
  alias lla 'eza -la'
  alias ls eza
  alias lt 'eza --tree'
  alias vim nvim
end
